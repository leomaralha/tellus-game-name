FROM node:22.18.0-alpine

WORKDIR /app

# Copy package files first for better caching
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production=false

# Copy source code
COPY . .

# Initial build to create dist directory for watch mode
RUN npm run build

EXPOSE 3000
EXPOSE 9229

CMD ["npm", "run", "start:debug"]
